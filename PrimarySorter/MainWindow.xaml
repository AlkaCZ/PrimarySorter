<Window x:Class="PrimarySorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimarySorter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="1. Úloha"></Label>
        <Label Content="2. Úloha" Grid.Row="1"></Label>
        <Label Content="3. Úloha" Grid.Row="2"></Label>
        <Button Content="Spustit hledání" Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
        <Button Content="Spustit hledání" Grid.Column="0" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
        <Button Content="Spustit hledání" Grid.Column="0" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
        <Label Content="Jaké číslo má hledané prvočíslo obsahovat ?" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center"></Label>
        <Label Content="Jaké číslice se mají v prvočísle opakovat a kolikrát ?" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center"></Label>
        <Label Content="V jakém rozsahu se mají vyhledat prvočísla ?" VerticalAlignment="Center" Grid.ColumnSpan="2"></Label>
        <TextBox Grid.Column="4" Background="Red"></TextBox>
        <TextBox Grid.Column="4" Grid.Row="1" Background="Blue"></TextBox>
        <TextBox Grid.Column="4" Grid.Row="2" Background="Yellow"></TextBox>

        <TextBox Background="Red" Grid.Column="2" VerticalAlignment="Top" Height="25" Text="Max"></TextBox>
        <TextBox Background="Blue" Grid.Column="2" VerticalAlignment="Center" Height="25" Text="Min"></TextBox>
        <TextBox Background="Yellow" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Height="25" Text="Čislo"></TextBox>
        <TextBox Background="Green" Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" Height="25" Text="Číslo"></TextBox>
        <TextBox Background="Orange" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" Height="25" Text="Kolikrát"></TextBox>



    </Grid>
</Window>
